<div class="header">
  <!-- style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1478827387698-1527781a4887?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80')" -->
  <h1><%= @island.name%></h1>
  <p> <%= @island.address%></p>
  <p> <%= @island.location%></p>
</div>



<div class="d-flex d-flex justify-content-between bd-highlight">
  <div style="width: 600px;">
    <p>
      <%= cl_image_tag @island.image.key, height: 300, width: 400, crop: :fill %>
    </p>

    <p class="mt-3">
      <%= @island.description%>
    </p>
  </div>

  <% unless @island.user_id == current_user.id %>
    <div style="width: 400px;">
      <h4>Make your reservation right now!</h4>
      <%= render 'reservations/new' %>
    </div>
  <% end %>
</div>

<div id="map" style="width: 100%; height: 600px;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<h6 class="mt-3">
  <%= link_to "Back", islands_path %>
</h6>
